---
// Header component - Exact replica of fiddle.digital header
// Has two logo states: logo-max (full) and logo-min (minimized)
// Navbar uses mix-blend-mode: exclusion via a separate layer
---

<!-- Main Header: Contains logos (original structure) and navbar background -->
<header class="header">
  <div class="header-wrapper">
    <!-- LOGO MAX - Full header (visible initially) -->
    <div class="logo-section logo-max">
      <div class="logo-wrap">
        <span class="bg"></span>
        <a href="/" class="logo-link" aria-label="Home">
          <span class="logo-text">
            <span class="brand-name">AISAC.Pixel</span>
            <span class="sub-text">フィドル</span>
          </span>
          <span class="agency-label">AI LABS</span>
          <img src="/iconaisac.svg" alt="AISAC Pixel Logo" class="logo-icon" />
        </a>
      </div>
    </div>

    <!-- LOGO MIN - Minimized header (visible after scroll) -->
    <div class="logo-section logo-min">
      <span class="bg"></span>
      <a href="/" class="logo-link" aria-label="Home">
        <span class="brand-name">AISAC.Pixel</span>
      </a>
    </div>

    <!-- Navigation Background (no text here) -->
    <div class="nav-section nav-bg">
      <div class="nav-wrap">
        <span class="bg"></span>
      </div>
    </div>
  </div>
</header>

<!-- Navbar Blend Layer: Separate fixed layer for nav text with mix-blend-mode -->
<nav class="nav-blend-layer">
  <div class="nav-blend">
    <a href="/product" class="nav-link"><span>Product</span></a>
    <a href="/about" class="nav-link"><span>About</span></a>
    <a href="/learn" class="nav-link"><span>Learn</span></a>
    <a href="/connect" class="nav-link last-main"
      ><span>Let's talk</span><label>+</label></a
    >
    <a href="/try" class="nav-link external"
      ><span>Try AISAC</span><svg class="arrow-icon" viewBox="0 0 24 24"
        ><use href="#icon-24_blank"></use></svg
      ></a
    >
  </div>
</nav>

<style>
  /* ========================================
     HEADER BASE
     Single header for logos + navbar background
     ======================================== */
  .header {
    position: fixed;
    left: 0;
    right: 0;
    top: var(--g-gap);
    z-index: 100;
    pointer-events: none;
  }

  /* ========================================
     NAV BLEND LAYER
     Separate fixed element for navbar text
     Uses mix-blend-mode: exclusion
     ======================================== */
  .nav-blend-layer {
    display: none;
  }

  @media (min-width: 1024px) {
    .nav-blend-layer {
      display: block;
      position: fixed;
      top: var(--g-gap);
      right: var(--g-margin);
      left: calc(
        var(--g-margin) + (100% - var(--g-margin) * 2) / 14 * 6 + var(--g-gap) *
          6
      );
      height: 2rem;
      z-index: 101;
      mix-blend-mode: exclusion;
      pointer-events: none;
      background: transparent;
      overflow: visible;
    }
  }

  /* All text in blend layer must be white for exclusion to work */
  .nav-blend-layer * {
    color: var(--c-white) !important;
  }

  .nav-blend-layer svg {
    fill: var(--c-white) !important;
  }

  .header-wrapper {
    position: relative;
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--g-gap);
    margin: 0 var(--g-margin);
    align-items: start;
  }

  @media (min-width: 1024px) {
    .header-wrapper {
      grid-template-columns: repeat(14, 1fr);
    }
  }

  /* ========================================
     LOGO MAX - Full header (large, black)
     Uses r32.svg mask (larger radius)
     ======================================== */
  .logo-max {
    grid-column: 1 / -1;
    pointer-events: all;
    height: 2rem; /* Base height, content expands it */
  }

  @media (min-width: 1024px) {
    .logo-max {
      grid-column: 1 / 7;
    }
  }

  .logo-max .logo-wrap {
    position: relative;
    width: 100%;
    overflow: visible;
    mask-image: url(/r32.svg);
    -webkit-mask-image: url(/r32.svg);
    mask-size: 100% 100%;
    -webkit-mask-size: 100% 100%;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
  }

  .logo-max .logo-wrap .bg {
    position: absolute;
    inset: 0;
    background-color: var(--c-black);
    mask-image: url(/r32.svg);
    -webkit-mask-image: url(/r32.svg);
    mask-size: 100% 100%;
    -webkit-mask-size: 100% 100%;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    transform-origin: bottom center; /* Default: appears from bottom */
    transition: transform 0.6s var(--f-cubic);
  }

  .logo-max .logo-link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: calc(var(--g-gap) * 3.5) var(--g-gap);
    background: none !important;
  }

  .logo-max .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1;
    margin-left: calc(var(--g-gap) * 2);
  }

  .logo-max .brand-name {
    color: var(--c-white);
    font-size: var(--h5);
    font-weight: 400;
    letter-spacing: -0.02em;
    transition: color 0.3s var(--f-cubic);
  }

  .logo-max .sub-text {
    color: #fff;
    font-size: var(--h7);
    margin-top: 0.15em;
    transition: color 0.3s var(--f-cubic);
  }

  .logo-max .agency-label {
    position: absolute;
    left: 55%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: #fff;
    font-size: var(--mm);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    transition: color 0.3s var(--f-cubic);
  }

  @media (max-width: 1023px) {
    .logo-max .agency-label {
      display: none;
    }
  }

  .logo-max .logo-icon {
    position: absolute;
    right: -1rem;
    top: 50%;
    transform: translateY(-50%);
    width: 9rem;
    height: auto;
    aspect-ratio: 800 / 533;
    object-fit: contain;
    filter: invert(1);
  }

  /* ========================================
     LOGO MIN - Minimized header (small, grey)
     Uses r16.svg mask (same as navbar)
     Always present, animated via scaleY and color
     ======================================== */
  .logo-min {
    grid-column: 1 / -1;
    pointer-events: none; /* Initially not interactive */
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2rem;
    display: flex; /* Always visible, never display:none */
    align-items: center;
  }

  @media (min-width: 1024px) {
    .logo-min {
      /* Match logo-max starting column, but smaller width */
      right: auto;
      width: calc((100% - 13 * var(--g-gap)) / 14 * 3 + 2 * var(--g-gap));
    }
  }

  .logo-min .bg {
    position: absolute;
    inset: 0;
    background-color: var(--c-grey);
    mask-image: url(/r16.svg);
    -webkit-mask-image: url(/r16.svg);
    mask-size: 100% 100%;
    -webkit-mask-size: 100% 100%;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    transform-origin: bottom center;
    transform: scaleY(0); /* Start collapsed */
    transition: transform 0.5s var(--f-cubic);
  }

  .logo-min .logo-link {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 100%;
    padding: 0 calc(var(--g-gap) * 2);
    background: none !important;
  }

  /* Circle indicator after the logo - starts transparent */
  .logo-min .logo-link::after {
    content: "";
    display: block;
    width: 1rem;
    height: 1rem;
    border: 0.15rem solid transparent; /* Starts transparent */
    border-radius: 50%;
    margin-right: calc(var(--g-gap));
    transition:
      border-color 0.3s var(--f-cubic),
      transform 0.6s var(--f-cubic);
  }

  /* Text starts transparent */
  .logo-min .brand-name {
    color: transparent; /* Starts transparent */
    font-size: var(--m);
    font-weight: 400;
    margin-left: calc(var(--g-gap) * 2);
    transition: color 0.3s var(--f-cubic);
  }

  /* ========================================
     NAVIGATION SECTION
     Uses r16.svg mask (smaller radius)
     ======================================== */
  .nav-section {
    display: none;
    pointer-events: all;
    position: relative;
  }

  @media (min-width: 1024px) {
    .nav-section {
      display: block;
      grid-column: 7 / 15;
    }
  }

  .nav-wrap {
    position: absolute;
    inset: 0;
    height: 2rem;
    mask-image: url(/r16.svg);
    -webkit-mask-image: url(/r16.svg);
    mask-size: 100% 100%;
    -webkit-mask-size: 100% 100%;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    pointer-events: none;
  }

  .nav-wrap .bg {
    position: absolute;
    inset: 0;
    background-color: var(--c-black);
    mask-image: url(/r16.svg);
    -webkit-mask-image: url(/r16.svg);
    mask-size: 100% 100%;
    -webkit-mask-size: 100% 100%;
    mask-repeat: no-repeat;
    -webkit-mask-repeat: no-repeat;
    transform-origin: bottom center; /* Default: appears from bottom */
    transition: transform 0.5s var(--f-cubic);
  }

  /* ========================================
     NAV BLEND - Content inside blend layer
     ======================================== */
  .nav-blend {
    display: flex;
    align-items: center;
    justify-content: space-around;
    height: 100%;
    padding: 0 calc(var(--g-gap) * 2);
    pointer-events: all;
  }

  .nav-blend .nav-link {
    color: var(--c-white); /* White is required for exclusion to work */
  }

  .nav-blend .nav-link span {
    color: var(--c-white);
    position: relative;
  }

  .nav-blend .nav-link label {
    color: var(--c-white);
  }

  .nav-blend .nav-link .arrow-icon {
    fill: var(--c-white);
  }

  .nav-link {
    color: var(--c-white);
    font-size: 20px;
    line-height: 24px;
    font-weight: 400;
    background: none !important;
    display: flex;
    align-items: flex-start;
    gap: 0.15em;
    padding: 0.5rem 2rem;
    transition: color 0.3s var(--f-cubic);
  }

  .nav-link.external {
    font-size: 15px;
    line-height: 18px;
  }

  .nav-link .arrow-icon {
    width: 0.7em;
    height: 0.7em;
    fill: var(--c-berry);
    margin-left: 0.2em;
    margin-top: -0.1em;
    transition: fill 0.3s var(--f-cubic);
  }

  .nav-link label {
    color: var(--c-berry);
    font-size: var(--mm);
    cursor: pointer;
    transition: color 0.3s var(--f-cubic);
    line-height: 1;
    margin-top: -0.1em;
  }

  /* Hover effect: when hovering nav, all links dim except the hovered one */
  .nav-blend:hover .nav-link,
  .nav-blend:hover .nav-link span,
  .nav-blend:hover .nav-link label,
  .nav-blend:hover .nav-link .arrow-icon {
    color: var(--c-grey-dark) !important;
    fill: var(--c-grey-dark) !important;
  }

  .nav-blend:hover .nav-link:hover,
  .nav-blend:hover .nav-link:hover span,
  .nav-blend:hover .nav-link:hover label,
  .nav-blend:hover .nav-link:hover .arrow-icon {
    color: var(--c-berry) !important;
    fill: var(--c-berry) !important;
  }

  /* Separator as pseudo-element - doesn't affect space-around */
  .nav-link.last-main {
    position: relative;
  }

  .nav-link.last-main::after {
    content: "";
    position: absolute;
    right: -0.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 1px;
    height: var(--m);
    background-color: var(--c-grey-dark);
    transition: opacity 0.3s var(--f-cubic);
  }

  /* ========================================
     SCROLL STATES - Logo Max/Min Toggle
     ======================================== */

  /* When scrolling DOWN - logo-max disappears from top */
  .logo-max.-hiding .logo-wrap .bg {
    transform-origin: top center;
  }

  /* When scrolled - Hide logo-max (no fade, just bg contracts) */
  .logo-max.-hidden {
    pointer-events: none;
  }

  .logo-max.-hidden .logo-wrap .bg {
    transform: scaleY(0);
  }

  /* Text becomes transparent when hidden */
  .logo-max.-hidden .brand-name,
  .logo-max.-hidden .sub-text,
  .logo-max.-hidden .agency-label {
    color: transparent;
  }

  .logo-max.-hidden .logo-icon {
    opacity: 0;
    transition: opacity 0.3s var(--f-cubic);
  }

  /* Logo-min - when activated, show everything */
  .logo-min.-visible {
    pointer-events: all;
  }

  /* Background expands from bottom - with delay so it appears AFTER logo-max hides */
  .logo-min.-visible .bg {
    transform: scaleY(1);
    transition-delay: 0.2s;
  }

  /* Text fades in - with delay */
  .logo-min.-visible .brand-name {
    color: var(--c-black);
    transition-delay: 0.2s;
  }

  /* Circle border fades in - with delay */
  .logo-min.-visible .logo-link::after {
    border-color: var(--c-black);
    transition-delay: 0.2s;
  }

  /* When logo-min hides (scroll up) - contract from bottom to top */
  .logo-min:not(.-visible) .bg {
    transform-origin: top center; /* Contract upward */
  }

  /* ========================================
     NAVBAR - Hold state (no container)
     With mix-blend-mode, colors adapt automatically
     ======================================== */

  /* When scrolling DOWN - navbar bg disappears from top */
  .nav-section.-hiding .nav-wrap .bg {
    transform-origin: top center;
  }

  .nav-section.-hold .nav-wrap .bg {
    transform: scaleY(0);
  }

  /* ========================================
     NAVBAR - Hover state (container returns)
     ======================================== */
  .nav-section.-hold.-hovered .nav-wrap .bg {
    transform-origin: bottom center;
    transform: scaleY(1);
  }

  /* Hover opacity effects for nav-blend-layer when in -hovered state */
  .nav-blend-layer.-hovered .nav-link,
  .nav-blend-layer.-hovered .nav-link span,
  .nav-blend-layer.-hovered .nav-link label,
  .nav-blend-layer.-hovered .nav-link .arrow-icon {
    color: var(--c-grey-dark) !important;
    fill: var(--c-grey-dark) !important;
  }

  .nav-blend-layer.-hovered .nav-link:hover,
  .nav-blend-layer.-hovered .nav-link:hover span,
  .nav-blend-layer.-hovered .nav-link:hover label,
  .nav-blend-layer.-hovered .nav-link:hover .arrow-icon {
    color: var(--c-berry) !important;
    fill: var(--c-berry) !important;
  }
</style>
