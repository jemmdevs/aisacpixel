---
// Footer.astro
const today = new Date();
---

<footer class="footer" id="main-footer">
    <!-- Top Decorator Line -->
    <div class="footer-top">
        <div class="scritch-badge">
            <span>AISAC Pixel</span>
        </div>
    </div>

    <!-- Main Links Grid -->
    <div class="main-links" id="footer-links">
        <a href="/work" class="big-link">Work</a>
        <a href="/about" class="big-link">About</a>
        <a href="/contact" class="big-link">Let's talk</a>
    </div>

    <!-- Social Links -->
    <div class="social-links">
        <a href="#">Awwwards</a>
        <a href="#">Instagram</a>
        <a href="#">Dribbble</a>
        <a href="#">Behance</a>
    </div>
</footer>

<script>
    import { lenis } from '../scripts/lenis';

    const footer = document.getElementById("main-footer");
    const linksContainer = document.getElementById("footer-links");

    if (footer && linksContainer) {
        const updateScroll = () => {
            const rect = footer.getBoundingClientRect();
            const dist = window.innerHeight - rect.top;

            if (dist > 0) {
                const progress = Math.min(1, Math.max(0, dist / 300));
                linksContainer.style.opacity = progress.toString();
                linksContainer.style.transform = `translateY(${-105 * (1 - progress)}px)`;
            } else {
                linksContainer.style.opacity = "0";
                linksContainer.style.transform = "translateY(-105px)";
            }
        };

        // Usa el evento scroll de Lenis en lugar de window scroll
        // (Lenis intercepta el scroll nativo y este no dispara durante smooth scroll)
        lenis.on('scroll', updateScroll);

        // Llamada inicial para el estado de carga
        updateScroll();
    }
</script>

<style>
    .footer {
        background-color: var(--c-black);
        color: var(--c-white);
        padding: var(--g-margin) 0 2rem 0; /* Top G-Margin, Bottom 2rem, Sides 0 */
        /* margin-top: 15vh; Removed to sit closer to PreFooter */
        position: relative;
        overflow: hidden;
    }

    /* Top Border & Badge */
    .footer-top {
        position: relative;
        border-top: 1px solid var(--c-red);
        margin-bottom: 4rem;
        display: flex;
        justify-content: center;
    }

    .scritch-badge {
        position: absolute;
        top: 0;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: var(--c-black);
        color: var(--c-white);
        border: 1px solid var(--c-red);
        padding: 0.1rem 0.6rem; /* Tighter padding */
        border-radius: 2rem;
        display: flex;
        align-items: center;
        gap: 0.3rem; /* Reduced gap */
        font-size: 0.85rem; /* Larger text as requested (was var(--mm)) */
        text-transform: uppercase;
    }

    .scritch-badge svg {
        width: 2.2em; /* Reduced to remove excess container space */
        height: auto;
    }

    /* Main Links */
    .main-links {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
        margin-bottom: 6rem;
        /* Initial state for JS animation (progressive enhancement fallback?) 
           If JS fails, links might be invisible. 
           Ideally, use logic: .js-loading .main-links { ... } 
           But for simplicity, we assume JS works or defaults are overridden quickly.
           Let's default opacity to 1 in CSS so SEO/No-JS works, script sets to 0 immediately.
        */
        opacity: 0; /* Changed to 0 so no flash of non-animated content if script runs fast. 
                       If script fails, content is hidden. Risk. 
                       Better: script sets it. 
                    */
        transform: translateY(-105px);
        transition: opacity 0.1s linear; /* Smoothness if RAF jitters */
        will-change: opacity, transform;
    }

    @media (min-width: 1024px) {
        .main-links {
            display: flex; /* Switch to Flexbox */
            justify-content: space-between;
            align-items: center;
            width: 100vw;
            margin-left: calc(50% - 50vw);
            padding: 0 4vw;
            gap: 0;
            box-sizing: border-box;
            position: relative; /* For absolute centering */
        }

        .main-links a:nth-child(1) {
            text-align: left;
            margin: 0;
            padding-left: 0;
        }

        .main-links a:nth-child(2) {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            white-space: nowrap;
            margin: 0;
        }

        .main-links a:nth-child(3) {
            text-align: right;
            margin: 0;
            padding-right: 0;
        }
    }

    .big-link {
        font-size: 3.5rem; /* Smaller font size (was 14vw) */
        line-height: 1.1;
        font-weight: 400;
        color: var(--c-red); /* Red as requested */
        text-decoration: none;
        letter-spacing: -0.02em;
        position: relative;
        display: inline-block;
        width: fit-content;
        margin: 0 auto; /* Center in grid cell */
    }

    @media (min-width: 1024px) {
        .big-link {
            font-size: 4rem; /* Smaller desktop size (was 8vw) */
        }
    }

    /* Underline Animation (Left to Right In, Left to Right Out) */
    .big-link::after {
        content: "";
        position: absolute;
        bottom: -5px;
        left: 0;
        width: 100%;
        height: 1px; /* Thinner line */
        background-color: currentColor;
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.4s var(--f-cubic, ease-out);
    }

    .big-link:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }

    /* Social Links */
    .social-links {
        display: flex;
        justify-content: center;
        gap: 2rem;
        margin-bottom: 0.5rem; /* Reduced from 8rem to remove excess bottom space */
        flex-wrap: wrap;
    }

    .social-links a {
        color: #ffffff;
        font-size: var(--m);
        text-decoration: none;
        opacity: 1; /* Solid white as requested */
        transition: opacity 0.3s ease;
        position: relative;
    }

    .social-links a::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 100%;
        height: 1px;
        background-color: #ffffff;
        transform: scaleX(0);
        transform-origin: right;
        transition: transform 0.3s ease;
    }

    .social-links a:hover {
        opacity: 1;
        color: #ffffff;
    }

    .social-links a:hover::after {
        transform: scaleX(1);
        transform-origin: left;
    }
</style>
