---
// c-trust - Clients/Trust section
interface Props {
  title?: string;
  subtitle?: string;
  clients?: string[];
}

const {
  title = "Trusted by",
  subtitle = "We've had the pleasure of working with innovative brands and forward-thinking companies.",
  clients = [
    "Awwwards",
    "FWA",
    "CSS Design Awards",
    "Orpetron",
    "Kaleida",
    "ThermoKonnect"
  ]
} = Astro.props;
---

<section class="c-trust -t-p">
  <div class="-w">
    <div class="header">
      <h2 class="-h3 -m-h4">{title}</h2>
      <p class="subtitle -m">{subtitle}</p>
    </div>

    <div class="clients-grid">
      {clients.map((client, index) => (
        <div class="client-item" style={`--delay: ${index * 0.1}s;`}>
          <span class="name -h6">{client}</span>
          <span class="index -mm">{String(index + 1).padStart(2, '0')}</span>
        </div>
      ))}
    </div>

    <div class="caption-area">
      <span class="caption -mm -up">Partners in innovation</span>
    </div>
  </div>
</section>

<style>
  .c-trust {
    background-color: var(--c-black);
    color: var(--c-white);
    padding: calc(var(--g-gap) * 16) 0;
  }

  .c-trust .-w {
    display: grid;
    grid-template-columns: repeat(var(--g-columns), 1fr);
    gap: var(--g-gap);
    row-gap: calc(var(--g-gap) * 8);
  }

  /* ========================================
     HEADER
     ======================================== */
  .header {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: calc(var(--g-gap) * 4);
  }

  @media (min-width: 1024px) {
    .header {
      grid-column: 1 / 7;
    }
  }

  .header h2 {
    color: var(--c-white);
  }

  .header .subtitle {
    color: var(--c-grey);
    margin: 0;
    max-width: 40ch;
  }

  /* ========================================
     CLIENTS GRID
     ======================================== */
  .clients-grid {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--g-gap);
  }

  @media (min-width: 768px) {
    .clients-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .clients-grid {
      grid-column: 7 / 14;
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .client-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: calc(var(--g-gap) * 3) calc(var(--g-gap) * 2);
    border-bottom: 1px solid rgba(var(--c-white-rgb), 0.1);
    transition: background-color 0.3s var(--f-cubic);
    cursor: default;
  }

  .client-item:hover {
    background-color: rgba(var(--c-white-rgb), 0.05);
  }

  .client-item .name {
    color: var(--c-white);
    transition: color 0.3s var(--f-cubic);
  }

  .client-item:hover .name {
    color: var(--c-berry);
  }

  .client-item .index {
    color: var(--c-grey-dark);
  }

  /* ========================================
     CAPTION AREA
     ======================================== */
  .caption-area {
    grid-column: 1 / -1;
    display: flex;
    justify-content: flex-end;
  }

  @media (min-width: 1024px) {
    .caption-area {
      grid-column: 1 / 7;
      justify-content: flex-start;
    }
  }

  .caption-area .caption {
    color: var(--c-grey-dark);
  }
</style>
