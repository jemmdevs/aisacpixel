<style>
    .ai-button-section {
        background-color: var(--c-black);
        padding: 0 0 8rem 0; /* Removed top padding to bring closer to Welcome */
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 50vh;
    }

    .wrapper {
        /* Intensified Red Theme Colors */
        --accent-1: #ff0000; /* Pure bright red */
        --accent-2: #dc0000; /* Deep strong red */
        --accent-3: #ff0000; /* Max brightness for dropshadow */
        --accent-4: #ff000080; /* More opaque red transparent */
        --light-1: #dc000080; /* Stronger red glow */
        --light-2: #ff000060; /* Stronger lighter glow */

        --duration: 3s;
        --transition: 0.5s;

        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
        width: max-content;
        height: max-content;
    }

    .light-1,
    .light-2 {
        pointer-events: none;
        position: absolute;
        top: -20px;
        left: -30px;
        width: 100px;
        height: 70px;
        border-radius: 50%;
        background-color: var(--light-1);
        filter: blur(24px);
        z-index: 1;
        transition:
            opacity var(--transition) ease,
            top var(--transition) ease,
            left var(--transition) ease;
        opacity: 0.4;
    }

    .light-2 {
        top: auto;
        bottom: -20px;
        left: auto;
        right: -20px;
        width: 80px;
        height: 40px;
        background-color: var(--light-2);
        transition-duration: calc(var(--transition) * 2);
        z-index: -1;
        opacity: 0.25;
    }

    .ai-bg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 0; /* Changed from -1 to 0 to sit with lights, behind button (btn is auto/higher?) */
        fill: none;
        width: 300px; /* Force dimensions */
        height: 300px;
        transition: filter var(--transition) ease;
        opacity: 0.8; /* Ensure visibility */
    }

    .line-bg {
        stroke: #fff; /* Brighter white */
        stroke-opacity: 0.15; /* More visible than #fff1 */
        stroke-width: 0.5;
    }

    .line {
        stroke: none;
        stroke-width: 0;
        stroke-dasharray: 16 56;
        transition: stroke var(--transition) ease-in-out;
    }

    .dot {
        fill: #888; /* Lighter for better visibility */
        opacity: 0.6; /* Increased from 0.3 */
        transition: fill var(--transition) ease;
    }

    .ai-btn {
        width: max-content;
        box-sizing: border-box;
        display: flex;
        align-items: center;
        justify-content: center;
        min-width: 120px;
        min-height: 48px;
        border-radius: 7px;
        background-color: #000;
        background-image:
            url(data:image/png;base64,),
            linear-gradient(to bottom, #fff1, transparent);
        color: #ddd;
        border: 1px solid #333;
        font-size: 16px;
        font-weight: 500;
        font-family: var(--font);
        letter-spacing: -0.5px;
        cursor: pointer;
        transition: all var(--transition) ease;
        box-shadow:
            0 0 30px -12px var(--light-1),
            inset -1px -1px 1px 1px #000,
            inset -2px -2px 2px 1px #fff2,
            inset 1px 1px 1px 1px #000,
            inset 2px 2px 2px 1px #fff2;
        z-index: 10; /* Ensure button is above SVG */
    }

    .ai-btn .txt-1 {
        position: absolute;
        opacity: 1;
        transition: opacity 0.4s ease;
    }

    .ai-btn .txt-2 {
        position: absolute;
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    /* HOVER STATE */
    .ai-btn:hover {
        color: #fff;
        border: 1px solid #555;
        text-shadow: 0 0 10px var(--light-1);
    }

    .wrapper:has(.ai-btn:hover) .dot {
        fill: #bbb;
    }

    .wrapper:has(.ai-btn:hover) .light-1,
    .wrapper:has(.ai-btn:hover) .light-2 {
        opacity: 0.7;
    }

    .wrapper:has(.ai-btn:hover) .light-1 {
        top: -30px;
        left: -40px;
    }

    .wrapper:has(.ai-btn:hover) .light-2 {
        bottom: -30px;
        right: -30px;
    }

    /* ACTIVE STATE */
    .ai-btn:active {
        box-shadow:
            0 0 10px var(--light-1),
            inset -1px -1px 1px 1px #000,
            inset -2px -2px 2px 1px #fff2,
            inset 1px 1px 1px 1px #000,
            inset 2px 2px 2px 1px #fff2;
    }

    .wrapper:has(.ai-btn:active) .light-1,
    .wrapper:has(.ai-btn:active) .light-2 {
        opacity: 1;
    }

    /* FOCUS STATE */
    .ai-btn:focus {
        background-color: #1a1a1e;
        border-color: var(--accent-2);
        animation: pulse var(--duration) ease-in-out infinite;
    }

    .ai-btn:focus .txt-1 {
        opacity: 0;
    }

    .ai-btn:focus .txt-2 {
        opacity: 1;
        animation: pulse-text var(--duration) ease-in-out infinite;
    }

    .wrapper:has(.ai-btn:focus) .dot {
        animation: dot-opac calc(var(--duration) * 0.5) linear infinite;
        fill: var(--accent-1);
    }

    .wrapper:has(.ai-btn:focus) .dot:nth-child(odd) {
        animation-delay: calc(var(--duration) * 0.1);
    }

    .wrapper:has(.ai-btn:focus) .line {
        animation: dash var(--duration) ease-out infinite;
    }

    .wrapper:has(.ai-btn:focus) .line:nth-child(odd) {
        animation-direction: normal;
        animation-delay: calc(var(--duration) * 0.1);
    }

    .wrapper:has(.ai-btn:focus) .ai-bg {
        filter: drop-shadow(0px 0px 4px var(--accent-3));
    }

    @keyframes pulse-text {
        0%,
        100% {
            text-shadow: 0 0 2px #0000;
        }

        50% {
            text-shadow: 0 0 32px var(--accent-3);
        }
    }

    @keyframes dot-opac {
        0%,
        100% {
            opacity: 0.1;
        }

        20% {
            opacity: 1;
        }
    }

    @keyframes pulse {
        0%,
        100% {
            box-shadow:
                0 0 20px var(--light-2),
                inset -1px -1px 1px 1px #000,
                inset -2px -2px 2px 1px #fff2,
                inset 1px 1px 1px 1px #000,
                inset 2px 2px 2px 1px #fff2;
            border-color: #0000;
        }

        50% {
            box-shadow:
                0 0 60px 0px var(--light-1),
                inset -1px -1px 1px 1px #000,
                inset -2px -2px 2px 1px #fff2,
                inset 1px 1px 1px 1px #000,
                inset 2px 2px 2px 1px #fff2;
        }

        85% {
            border-color: var(--accent-2);
        }
    }

    @keyframes dash {
        0% {
            stroke-width: 0;
            stroke-dashoffset: 10;
            stroke: var(--accent-4);
        }

        50% {
            stroke-width: 0.5;
            stroke-dashoffset: 88;
            stroke: var(--accent-2);
        }

        100% {
            stroke-width: 0;
            stroke-dashoffset: 166;
            stroke: var(--accent-4);
        }
    }
</style>
