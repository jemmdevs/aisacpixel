---
// c-talk - Contact CTA section
interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Time to connect",
  subtitle = 'Just one small action stands between us and getting acquainted. A great journey begins with the first word "hello!"'
} = Astro.props;
---

<section class="c-talk -t-p">
  <div class="-w">
    <div class="title">
      <span class="-h3 -m-h4">{title}</span>
    </div>

    <div class="media-wrap">
      <div class="media">
        <div class="video-wrap -fit">
          <div class="video-placeholder"></div>
        </div>
      </div>
    </div>

    <div class="cta-area">
      <p class="c-talk_caption -mm -up -taj">{subtitle}</p>
      <a href="/connect" class="button -p" aria-label="Get in touch" title="Get in touch">
        <svg>
          <use href="#icon-24_enter"></use>
        </svg>
      </a>
    </div>
  </div>
</section>

<style>
  .c-talk {
    background-color: var(--c-black);
    color: var(--c-white);
    padding: calc(var(--g-gap) * 16) 0;
  }

  .c-talk .-w {
    display: grid;
    grid-template-columns: repeat(var(--g-columns), 1fr);
    gap: var(--g-gap);
    row-gap: calc(var(--g-gap) * 8);
  }

  /* ========================================
     TITLE
     ======================================== */
  .c-talk .title {
    grid-column: 1 / -1;
    text-align: center;
  }

  @media (min-width: 1024px) {
    .c-talk .title {
      grid-column: 1 / 7;
      text-align: left;
    }
  }

  .c-talk .title span {
    color: var(--c-white);
  }

  /* ========================================
     MEDIA
     ======================================== */
  .media-wrap {
    grid-column: 1 / -1;
  }

  @media (min-width: 1024px) {
    .media-wrap {
      grid-column: 1 / 10;
    }
  }

  .media {
    position: relative;
    aspect-ratio: 21 / 9;
    border-radius: 1rem;
    overflow: hidden;
    cursor: pointer;
  }

  .media:hover .video-placeholder {
    transform: scale(1.05);
  }

  /* ========================================
     CTA AREA
     ======================================== */
  .cta-area {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: calc(var(--g-gap) * 4);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .cta-area {
      grid-column: 10 / 14;
      align-items: flex-start;
      justify-content: center;
    }
  }

  .c-talk_caption {
    color: var(--c-grey);
    margin: 0;
    max-width: 30ch;
    text-align: center;
  }

  @media (min-width: 1024px) {
    .c-talk_caption {
      text-align: justify;
    }
  }

  .cta-area .button {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    background-color: var(--c-grey) !important;
    transition: transform 0.3s var(--f-cubic), background-color 0.3s var(--f-cubic);
  }

  .cta-area .button::before {
    display: none;
  }

  .cta-area .button:hover {
    transform: scale(1.1);
    background-color: var(--c-white) !important;
  }

  .cta-area .button svg {
    fill: var(--c-black);
    width: 1.5rem;
    height: 1.5rem;
    margin: 0;
  }

  /* Video placeholder */
  .c-talk .video-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      var(--c-grey-dark) 0%,
      rgba(var(--c-purple-rgb), 0.5) 50%,
      var(--c-grey-dark) 100%
    );
    background-size: 200% 200%;
    animation: talkGradient 8s ease infinite;
    transition: transform 0.6s var(--f-cubic);
  }

  @keyframes talkGradient {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }
</style>
