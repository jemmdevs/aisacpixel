---
// c-testimonials - Client testimonials section
interface Testimonial {
  quote: string;
  name: string;
  position: string;
  company: string;
}

interface Props {
  title?: string;
  caption?: string;
  testimonials?: Testimonial[];
}

const defaultTestimonials: Testimonial[] = [
  {
    quote: "The site's UX was exceptional, easy, and intuitive to navigate. The backend system also worked flawlessly. Overall, we have received a lot of compliments.",
    name: "Daniel Reynolds",
    position: "Executive Producer",
    company: "Kaleida"
  },
  {
    quote: "Working with them was a transformative experience. They understood our vision and translated it into a digital masterpiece that exceeded all expectations.",
    name: "Sarah Chen",
    position: "Creative Director",
    company: "Studio Modern"
  },
  {
    quote: "The attention to detail and commitment to quality was evident in every aspect of the project. A truly professional team.",
    name: "Marcus Webb",
    position: "CEO",
    company: "TechVentures"
  }
];

const {
  title = "Gather 'round — client tales incoming.",
  caption = "Stories travel – about the ideas, the flow, the small magic moments that happen while building something together.",
  testimonials = defaultTestimonials
} = Astro.props;
---

<section class="c-testimonials -t-p">
  <div class="-w sequence">
    <span class="title -h5 -m-h6">{title}</span>
    <p class="caption -m-m">{caption}</p>

    <div class="testimonials-slider">
      <div class="testimonial active">
        <p class="-h6">{testimonials[0].quote}</p>
      </div>
      
      <div class="slider-controls">
        <span class="-mm -up prev">Prev</span>
        <span class="-mm -up pages">
          <span>01</span> / {String(testimonials.length).padStart(2, '0')}
        </span>
        <span class="-mm -up next">Next</span>
      </div>
    </div>

    <figure class="logo">
      <!-- Logo placeholder -->
      <div class="logo-placeholder">
        <span class="-mm">{testimonials[0].company}</span>
      </div>
    </figure>

    <div class="person">
      <span class="name">
        <span>{testimonials[0].name}</span>
      </span>
      <span class="position">
        <span>{testimonials[0].position}, {testimonials[0].company}</span>
      </span>
    </div>
  </div>
  <span class="-w -hl"></span>
</section>

<style>
  .c-testimonials {
    background-color: var(--c-berry);
    color: var(--c-black);
    padding: calc(var(--g-gap) * 16) 0;
  }

  .c-testimonials .sequence {
    display: grid;
    grid-template-columns: repeat(var(--g-columns), 1fr);
    gap: var(--g-gap);
    row-gap: calc(var(--g-gap) * 4);
  }

  /* ========================================
     TITLE & CAPTION
     ======================================== */
  .title {
    grid-column: 1 / -1;
    color: var(--c-black);
  }

  @media (min-width: 1024px) {
    .title {
      grid-column: 1 / 8;
    }
  }

  .caption {
    grid-column: 1 / -1;
    color: var(--c-grey-dark);
    margin: 0;
    max-width: 50ch;
  }

  @media (min-width: 1024px) {
    .caption {
      grid-column: 1 / 6;
    }
  }

  /* ========================================
     TESTIMONIALS SLIDER
     ======================================== */
  .testimonials-slider {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: calc(var(--g-gap) * 4);
    margin-top: calc(var(--g-gap) * 8);
  }

  @media (min-width: 1024px) {
    .testimonials-slider {
      grid-column: 1 / 10;
    }
  }

  .testimonial {
    min-height: 8rem;
  }

  .testimonial p {
    color: var(--c-black);
    margin: 0;
    max-width: 55ch;
    line-height: 1.3;
  }

  /* Slider controls */
  .slider-controls {
    display: flex;
    gap: calc(var(--g-gap) * 4);
    align-items: center;
  }

  .slider-controls .prev,
  .slider-controls .next {
    color: var(--c-grey-dark);
    cursor: pointer;
    transition: color 0.3s var(--f-cubic);
  }

  .slider-controls .prev:hover,
  .slider-controls .next:hover {
    color: var(--c-black);
  }

  .slider-controls .pages {
    color: var(--c-grey-dark);
  }

  .slider-controls .pages span {
    color: var(--c-black);
  }

  /* ========================================
     LOGO
     ======================================== */
  .logo {
    grid-column: 1 / -1;
    margin: calc(var(--g-gap) * 4) 0 0;
  }

  @media (min-width: 1024px) {
    .logo {
      grid-column: 10 / 14;
      grid-row: 3;
      margin: 0;
      align-self: start;
    }
  }

  .logo-placeholder {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: calc(var(--g-gap) * 2) calc(var(--g-gap) * 4);
    background-color: rgba(var(--c-black-rgb), 0.1);
    border-radius: 0.25rem;
  }

  .logo-placeholder span {
    color: var(--c-grey-dark);
    letter-spacing: 0.1em;
  }

  /* ========================================
     PERSON
     ======================================== */
  .person {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: calc(var(--g-gap));
  }

  @media (min-width: 1024px) {
    .person {
      grid-column: 10 / 14;
      grid-row: 4;
    }
  }

  .person .name {
    color: var(--c-black);
    font-size: var(--m);
  }

  .person .position {
    color: var(--c-grey-dark);
    font-size: var(--mm);
  }

  /* Horizontal line */
  .c-testimonials .-hl {
    margin-top: calc(var(--g-gap) * 8);
  }
</style>
