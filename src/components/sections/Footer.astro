---
// c-footer - Site footer with navigation and social links
interface Props {
  copyright?: string;
}

const { copyright = "AISAC.Pixel Â©2025" } = Astro.props;

const navLinks = [
  { label: "Work", href: "/work" },
  { label: "About", href: "/about" },
  { label: "Let's talk", href: "/connect" }
];

const socialLinks = [
  { label: "Awwwards", href: "https://www.awwwards.com/" },
  { label: "Instagram", href: "https://www.instagram.com/" },
  { label: "Dribbble", href: "https://dribbble.com/" },
  { label: "Behance", href: "https://www.behance.net/" }
];
---

<footer class="c-footer -a-p -t-p">
  <div class="-w">
    <figure class="-caption">
      <svg>
        <use href="#icon-24_fiddle"></use>
      </svg>
      <figcaption>Vreeee</figcaption>
    </figure>

    <nav class="nav -h2 -m-h4">
      {navLinks.map((link, index) => (
        <div>
          <a href={link.href}>{link.label}</a>
        </div>
      ))}
    </nav>

    <nav class="soc -m -m-p">
      {socialLinks.map((link, index) => (
        <a 
          target="_blank" 
          href={link.href}
          rel="noopener noreferrer"
          style={`--l-delay: ${0.15 + index * 0.075}s;`}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <div class="end -m -m-p">
      <span class="cookie-preferences -link">Cookie preferences</span>
      <span class="copy">{copyright}</span>
      <a href="/404" class="not-found">p. 4 04</a>
    </div>
  </div>
</footer>

<style>
  .c-footer {
    background-color: var(--c-berry);
    color: var(--c-black);
    padding: calc(var(--g-gap) * 8) 0 calc(var(--g-gap) * 4);
  }

  .c-footer .-w {
    display: grid;
    grid-template-columns: repeat(var(--g-columns), 1fr);
    gap: var(--g-gap);
    row-gap: calc(var(--g-gap) * 6);
  }

  /* ========================================
     CAPTION/LOGO
     ======================================== */
  .c-footer .-caption {
    grid-column: 1 / -1;
  }

  @media (min-width: 1024px) {
    .c-footer .-caption {
      grid-column: 1 / 3;
    }
  }

  .c-footer .-caption svg {
    fill: var(--c-black);
  }

  /* ========================================
     NAVIGATION
     ======================================== */
  .c-footer .nav {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    gap: calc(var(--g-gap) * 2);
  }

  @media (min-width: 1024px) {
    .c-footer .nav {
      grid-column: 3 / 10;
      flex-direction: row;
      gap: calc(var(--g-gap) * 4);
    }
  }

  .c-footer .nav a {
    color: var(--c-black);
    display: inline-block;
  }

  .c-footer .nav a:hover {
    color: var(--c-grey-dark);
  }

  /* ========================================
     SOCIAL LINKS
     ======================================== */
  .c-footer .soc {
    grid-column: 1 / -1;
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--g-gap) * 2) calc(var(--g-gap) * 4);
  }

  @media (min-width: 1024px) {
    .c-footer .soc {
      grid-column: 10 / 14;
      justify-content: flex-end;
    }
  }

  .c-footer .soc a {
    color: var(--c-grey-dark);
  }

  .c-footer .soc a:hover {
    color: var(--c-black);
  }

  /* ========================================
     END ROW
     ======================================== */
  .c-footer .end {
    grid-column: 1 / -1;
    display: flex;
    flex-wrap: wrap;
    gap: calc(var(--g-gap) * 2) calc(var(--g-gap) * 4);
    align-items: center;
    justify-content: space-between;
    padding-top: calc(var(--g-gap) * 4);
    border-top: 1px solid rgba(var(--c-black-rgb), 0.1);
  }

  .c-footer .cookie-preferences {
    color: var(--c-grey-dark);
    cursor: pointer;
  }

  .c-footer .cookie-preferences:hover {
    color: var(--c-black);
  }

  .c-footer .copy {
    color: var(--c-black);
  }

  .c-footer .not-found {
    color: var(--c-grey-dark);
    font-family: var(--font-mono);
  }

  .c-footer .not-found:hover {
    color: var(--c-black);
  }
</style>
