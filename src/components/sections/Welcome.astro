---
// c-welcome - Hero section for AI Research Company
import Button from "../Button.astro";
import SvgFrame from "../SvgFrame.astro";
import GlassContainer from "../GlassContainer.astro";
import OptimizedVideo from "../OptimizedVideo.astro";

interface Props {
  title?: string;
  subtitle1?: string;
  subtitle2?: string;
  copyright?: string;
}

const {
  title = "AISAC - Speed meets intelligence",
  subtitle1 = "Lightning-fast AI that delivers results in milliseconds.",
  subtitle2 = "Maximum efficiency. Minimum latency.",
  copyright = "©2025—2026",
} = Astro.props;
---

<section class="c-welcome">
  <!-- Visual Area: Focus Arrow + Video -->
  <div class="visual">
    <!-- SVG Frame Animation (Left side) -->
    <SvgFrame href="#brief" class="scroll-button" scale={1.3} />

    <!-- Media/Video (Right side) -->
    <div class="media-wrap">
      <div class="media-holder">
        <div class="media">
          <div class="mw-mh-m-d">
            <div class="video-wrap">
              <OptimizedVideo
                src="/videoAisac.webm"
                class="hero-video"
                type="video/webm"
                autoplay={true}
                loop={true}
                muted={true}
                playsinline={true}
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Words Section -->
  <div class="words">
    <h1 class="title">
      <span class="main">{title}</span>
    </h1>
    <p class="p-1">{subtitle1}</p>
    <p class="p-2">{subtitle2}</p>
  </div>

  <!-- Horizontal Line -->
  <div class="hl-wrapper">
    <span class="hl"></span>
  </div>

  <!-- Copyright -->
  <div class="wrap">
    <span class="copy">{copyright}</span>
  </div>

  <!-- Brief/CTA -->
  <div class="brief">
    <p class="brief-text">
      The fastest AI on the market, engineered for peak performance and
      unmatched efficiency in every interaction.
    </p>

    <!-- Glass Container (Right side) -->
    <GlassContainer class="brief-glass">
      <span class="vertical-line"></span>
      <span class="speed-label">Faster</span>
    </GlassContainer>

    <!-- White Glass Container -->
    <GlassContainer class="white-glass">
      <span class="ultra-label">Ultra Optimized</span>
      <OptimizedVideo
        src="/videoslash.webm"
        class="container-video"
        type="video/webm"
      />
    </GlassContainer>

    <Button href="/connect" label="Get in touch" class="cta-button" />
  </div>
</section>

<style>
  .c-welcome {
    --progress: 0; /* Scroll progress variable (0 to 1) */
    position: relative;
    z-index: 20;
    /* 
     * Extra height to allow scroll effect
     * The sticky video will stay in place while we scroll through this
     */
    min-height: 150vh;
    min-height: calc(var(--vh, 1vh) * 150);
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    padding-bottom: 50vh;
  }

  /* ========================================
     VISUAL AREA
     ======================================== */
  .visual {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--g-gap);
    margin: 0 var(--g-margin);
    padding-top: calc(2rem + var(--g-gap));
  }

  @media (min-width: 1024px) {
    .visual {
      grid-template-columns: repeat(14, 1fr);
      padding-top: calc(2rem + var(--g-gap) * 2);
      margin-bottom: 2.5%;
    }
  }

  /* Scroll Button positioning (uses SvgFrame component) */
  :global(.scroll-button) {
    display: none !important;
  }

  @media (min-width: 1024px) {
    :global(.scroll-button) {
      display: flex !important;
      grid-column: 1 / 7;
      align-self: center;
      justify-self: center;
      margin-top: 7rem;
    }
  }

  /* Media Wrap */
  .media-wrap {
    grid-column: 1 / -1;
    position: relative;
    z-index: 21;
  }

  @media (min-width: 1024px) {
    .media-wrap {
      grid-column: 7 / 15;
    }
  }

  .media-holder {
    --progress: 0;
    width: 100%;
    /* 
     * Position is controlled by JavaScript
     * Initially relative, then fixed when scrolling
     */
    position: relative;
    transform: translateZ(0);

    /* 
     * CONTRACTING EFFECT
     * overflow: hidden clips the content from bottom
     */
    overflow: hidden;
    border-radius: 1.5rem;
  }

  /* When JS adds -fixed class, video stays in place */
  .media-holder.-fixed {
    position: fixed;
    z-index: 21;
  }

  @media (min-width: 1024px) {
    .media-holder {
      border-radius: 2rem;
    }
  }

  .media {
    width: 100%;
    position: relative;
    /* 
     * Fixed aspect ratio via padding
     * This creates the full height of the video
     */
    padding-bottom: 56.25%; /* 16:9 */
    background-color: var(--c-black);
    /* 
     * Center content while contracting
     * Moves up by half the progress to keep center visible
     */
    transform: translateY(calc(var(--progress, 0) * -50%));
    transition: transform 0.1s linear;
  }

  @media (min-width: 1024px) {
    .media {
      padding-bottom: 57.14%; /* 21:12 */
    }
  }

  .mw-mh-m-d {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-wrap {
    position: absolute;
    inset: 0;
  }

  .video-placeholder {
    width: 100%;
    height: 100%;
    background: linear-gradient(
      135deg,
      #1a1a2e 0%,
      #16213e 25%,
      #0f3460 50%,
      #533483 75%,
      #e94560 100%
    );
    background-size: 400% 400%;
    animation: gradientFlow 15s ease infinite;
  }

  @keyframes gradientFlow {
    0%,
    100% {
      background-position: 0% 50%;
    }
    25% {
      background-position: 100% 50%;
    }
    50% {
      background-position: 100% 100%;
    }
    75% {
      background-position: 0% 100%;
    }
  }

  /* FDDA Badge */
  .fdda-badge {
    position: absolute;
    right: 1rem;
    top: 100%;
    transform: translateY(0.5rem);
  }

  .fdda-badge span {
    font-size: var(--mm);
    text-transform: uppercase;
    color: var(--c-black);
    background-color: var(--c-berry);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
  }

  /* ========================================
     WORDS SECTION
     ======================================== */
  .words {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--g-gap);
    margin: 0 var(--g-margin);
    margin-top: var(--h5);
    padding-bottom: 0;
    align-items: baseline;
  }

  @media (min-width: 1024px) {
    .words {
      grid-template-columns: repeat(14, 1fr);
      margin-top: var(--h4);
      padding-bottom: var(--g-gap);
    }
  }

  .title {
    grid-column: 1 / -1;
    font-size: var(--m);
    font-weight: 400;
    line-height: 1.2;
    margin-bottom: var(--h5);
    word-spacing: 0.01em;
    letter-spacing: 0.005em;
  }

  @media (min-width: 1024px) {
    .title {
      grid-column: 1 / 6;
      margin-bottom: 0;
    }
  }

  @media (max-width: 1024px) {
    .title {
      font-size: var(--h4);
    }
  }

  .title .main {
    color: var(--c-white);
  }

  .title sup {
    font-size: 0.5em;
    vertical-align: super;
    color: var(--c-grey-dark);
  }

  .title .location {
    color: var(--c-white);
  }

  .p-1,
  .p-2 {
    font-size: var(--m);
    color: var(--c-white);
    margin: 0;
  }

  @media (max-width: 1024px) {
    .p-1 {
      grid-column: 1 / 4;
    }
    .p-2 {
      grid-column: 4 / 7;
    }
  }

  @media (min-width: 1024px) {
    .p-1 {
      grid-column: 7 / 11;
    }
    .p-2 {
      grid-column: 11 / 15;
    }
  }

  /* ========================================
     HORIZONTAL LINE
     ======================================== */
  .hl-wrapper {
    margin: -0.5rem var(--g-margin) 0;
  }

  .hl {
    display: block;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.4);
    width: 100%;
  }

  /* ========================================
     WRAP (Copyright)
     ======================================== */
  .wrap {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--g-gap);
    margin: 0 var(--g-margin);
    padding-top: calc(var(--g-gap) * 2);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .wrap {
      grid-template-columns: repeat(14, 1fr);
    }
  }

  .copy {
    font-size: var(--mm);
    color: var(--c-white);
    font-feature-settings: "ss12";
  }

  /* ========================================
     BRIEF SECTION
     ======================================== */
  .brief {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: var(--g-gap);
    margin: 0 var(--g-margin);
    margin-top: var(--h2);
    padding-bottom: calc(var(--g-gap) * 4);
  }

  @media (min-width: 1024px) {
    .brief {
      grid-template-columns: repeat(14, 1fr);
    }
  }

  .brief-text {
    grid-column: 1 / -1;
    font-size: var(--h4);
    line-height: 1.1;
    color: var(--c-white);
    margin: 0;
    letter-spacing: -0.02em;
  }

  @media (min-width: 1024px) {
    .brief-text {
      grid-column: 1 / 8;
      font-size: 2.25rem;
      letter-spacing: -0.025em;
    }
  }

  @media (max-width: 1024px) {
    .brief-text {
      font-size: var(--h5);
    }
  }

  .brief-text .stat {
    font-size: var(--mm);
    text-transform: uppercase;
    vertical-align: top;
    margin-right: var(--mm);
    color: var(--c-grey-dark);
  }

  .brief-text .icon {
    display: inline-block;
    width: 1.2rem;
    height: 1.2rem;
    fill: var(--c-white);
    margin: 0 0.1rem;
    vertical-align: middle;
  }

  /* Button positioning - use :global() to target component class */
  /* Button positioning - use :global() to target component class */
  /* Button positioning - use :global() to target component class */
  .brief :global(.cta-button) {
    grid-column: 4 / 7; /* Move left (was 5 / 8) */
    grid-row: 2;
    justify-self: center; /* Center in this new range */
    align-self: start;
    margin-top: -4.5rem; /* Move higher up */
    display: block;
  }

  /* Glass container positioning in brief section */
  .brief :global(.brief-glass) {
    display: none;
    grid-column: 1 / -1;
    grid-row: 2;
    min-height: 12rem;
  }

  @media (min-width: 1024px) {
    .brief :global(.brief-glass) {
      display: block;
      grid-column: 8 / 11;
      grid-row: 1;
      aspect-ratio: 1;
      align-self: center;
    }
  }

  /* White glass container positioning */
  .brief :global(.white-glass) {
    display: none;
    grid-column: 1 / -1;
    grid-row: 3;
    min-height: 12rem;
  }

  @media (min-width: 1024px) {
    .brief :global(.white-glass) {
      display: block;
      grid-column: 11 / 14;
      grid-row: 1;
      aspect-ratio: 1;
      align-self: center;
      margin-left: var(--g-gap); /* Separation from brief-glass */
    }

    /* Override glass background to white */
    .brief :global(.white-glass .glass-container-inner) {
      background-color: rgba(255, 255, 255, 0.9);
    }
  }

  /* Video inside white container - target the OptimizedVideo wrapper */
  .brief :global(.container-video) {
    position: absolute;
    top: 59%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 58%;
    height: auto;
  }

  .brief :global(.container-video video) {
    width: 100%;
    height: auto;
    border: none;
    outline: none;
    border-radius: 0;
    object-fit: contain;
  }

  /* Hide the loading placeholder for this specific video */
  .brief :global(.container-video .video-loading-placeholder) {
    display: none;
  }

  /* Ultra label above video */
  .ultra-label {
    position: absolute;
    top: 10%;
    left: 50%;
    transform: translateX(-50%);
    color: #000;
    font-size: 23px;
    line-height: 27px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    white-space: nowrap;
  }

  /* Vertical line inside glass container */
  .vertical-line {
    position: absolute;
    left: 50%;
    top: 5%;
    bottom: 5%;
    width: 1px;
    transform: translateX(-50%);
    background: linear-gradient(
      to bottom,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.8) 15%,
      rgba(255, 255, 255, 0.8) 85%,
      rgba(255, 255, 255, 0) 100%
    );
  }

  /* Animated "Faster" label */
  .speed-label {
    position: absolute;
    left: 50%;
    top: 20%;
    transform: translateX(-50%) rotate(-90deg);
    transform-origin: center center;

    /* Badge style */
    background-color: #e6dfe4;
    color: #000000;
    padding: 0.3rem 0.8rem;
    border-radius: 0.25rem;

    font-size: var(--mm, 0.75rem);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    white-space: nowrap;

    animation: float-vertical 4s ease-in-out infinite;
  }

  @keyframes float-vertical {
    0%,
    100% {
      top: 20%;
    }
    50% {
      top: 72%;
    }
  }
</style>
